<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.HomePage">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_coffee_app_bar"
        >
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/fragment_coffee_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Coffee ne"
            app:menu="@menu/item_toolbar"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:titleTextColor="@color/white"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_coffee"
        android:layout_below="@id/fragment_coffee_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/arc_menu_cf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu_scr="@android:drawable/ic_menu_add"
        app:menu_color="#FF0000"
        app:menu_open="arc_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_floating_insert_cf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            app:backgroundTint="#FF0000"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_floating_update_cf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_update_24"
            app:backgroundTint="#FF0000"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_floating_delete_cf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            app:backgroundTint="#FF0000"/>

    </com.sa90.materialarcmenu.ArcMenu>

</RelativeLayout>