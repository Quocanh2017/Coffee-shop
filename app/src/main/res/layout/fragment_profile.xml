<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_profile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cf"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_black_18"
        android:hint="Your Name"
        android:text="admin"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="admin"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_black_18"
        android:hint="Your Account"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="Dai hoc Thuy Loi, 175 Tay Son"
        android:id="@+id/tv_user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:drawableLeft="@drawable/baseline_drive_file_rename_outline_black_18"
        android:hint="Your Address"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Your Profile"
            android:textSize="18sp"
            android:background="#75000000"
            android:drawableLeft="@drawable/baseline_edit_white_18"
            android:layout_marginTop="80dp"/>

</LinearLayout>