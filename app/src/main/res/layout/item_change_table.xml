<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_toStartOf="@+id/btn_update_table"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/img_change_table"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tabod"/>
        <TextView
            android:id="@+id/text_change_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table 1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_update_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btn_delete_table"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:text="Update"
        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/btn_delete_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="delete"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>