<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:background="#CC9966"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cf"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        />

    <EditText
        android:id="@+id/editText1_su"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView1"
        android:layout_alignStart="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        android:hint="Enter your name"
        />

    <EditText
        android:id="@+id/editText2_su"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText1_su"
        android:layout_alignStart="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        android:hint="Enter user name"
        />

    <EditText
        android:id="@+id/editText3_su"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText2_su"
        android:layout_alignStart="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        />

    <EditText
        android:id="@+id/editText4_su"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Enter Password again"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText3_su"
        android:layout_alignStart="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        />

    <Button
        android:id="@+id/button_su"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Sign up"
        android:layout_below="@+id/editText4_su"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>